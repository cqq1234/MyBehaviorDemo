<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:id="@+id/bottom_layout_one"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img1_bottom_main"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:src="@drawable/select_main_bottom_layout_first"/>
            <TextView
                android:id="@+id/text1_bottom_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="论坛"
                android:layout_marginTop="4dp"
                android:textColor="@drawable/selector_main_bottom_text_color"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottom_layout_two"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/linear_message_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img2_bottom_main"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:src="@drawable/select_main_bottom_layout_second"/>
                <TextView
                    android:id="@+id/text2_bottom_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:textColor="@drawable/selector_main_bottom_text_color"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bottom_layout_three"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img3_bottom_main"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:src="@drawable/select_main_bottom_layout_three"/>
            <TextView
                android:id="@+id/text3_bottom_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@drawable/selector_main_bottom_text_color"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
